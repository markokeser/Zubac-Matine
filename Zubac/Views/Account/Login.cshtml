@model Zubac.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Reset i osnovni stilovi */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        width: 100%;
        overflow: hidden; /* Sprečava scroll na nivou html i body */
    }

    body {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
        font-family: 'Inter', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        color: rgba(255, 255, 255, 0.9);
        padding: 0;
        margin: 0;
    }

    .login-wrapper {
        width: 100%;
        height: 100vh; /* Koristi 100vh umesto 100% za tačnu visinu */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        overflow: auto; /* Dozvoljava scroll samo unutar wrapper-a ako je potrebno */
    }

    .login-container {
        background: rgba(45, 45, 68, 0.95);
        border-radius: 16px;
        padding: clamp(1.2rem, 4vw, 2rem);
        width: 100%;
        max-width: min(380px, 90vw);
        max-height: 90vh; /* Ograničava maksimalnu visinu */
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(212, 175, 55, 0.2);
        margin: auto;
        overflow-y: auto; /* Dozvoljava scroll unutar kontejnera ako je potrebno */
    }

    .login-title {
        color: #d4af37;
        text-align: center;
        font-family: 'Playfair Display', serif;
        font-size: clamp(1.6rem, 5vw, 2rem);
        font-weight: 700;
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        line-height: 1.2;
    }

    .form-label {
        color: rgba(255, 255, 255, 0.8);
        font-weight: 600;
        font-size: clamp(0.8rem, 2.5vw, 0.9rem);
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 175, 55, 0.3);
        color: rgba(255, 255, 255, 0.9);
        border-radius: 8px;
        padding: 10px 14px;
        width: 100%;
        font-family: 'Inter', sans-serif;
        transition: all 0.2s ease;
        font-size: clamp(0.85rem, 2.5vw, 0.95rem);
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.1);
        border-color: #d4af37;
        box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
        color: rgba(255, 255, 255, 0.9);
        outline: none;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
        font-size: clamp(0.8rem, 2.5vw, 0.9rem);
    }

    .btn-login {
        background: linear-gradient(135deg, #4CAF50, #66BB6A);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-weight: 700;
        font-size: clamp(0.9rem, 2.5vw, 0.95rem);
        width: 100%;
        margin-top: 8px;
        transition: all 0.2s ease;
        font-family: 'Inter', sans-serif;
        cursor: pointer;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(76, 175, 80, 0.3);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .text-danger {
        color: #ff6b6b;
        font-size: clamp(0.7rem, 2vw, 0.8rem);
        margin-top: 4px;
        display: block;
        word-wrap: break-word;
        min-height: 1.2em; /* Fiksna visina da ne pomera elemente */
    }

    .validation-summary-errors {
        background: rgba(244, 67, 54, 0.1);
        border: 1px solid rgba(244, 67, 54, 0.3);
        border-radius: 8px;
        padding: 0.8rem;
        margin-bottom: 1rem;
        max-height: 150px; /* Ograničava visinu error poruka */
        overflow-y: auto;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 0.8rem;
    }

    .validation-summary-errors li {
        color: #ff6b6b;
        font-size: clamp(0.75rem, 2vw, 0.85rem);
        margin-bottom: 0.2rem;
        word-wrap: break-word;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    /* Media queries za specifične breakpoint-ove */
    @@media (max-width: 480px) {
        .login-wrapper {
            padding: 10px;
        }
        
        .login-container {
            padding: 1rem 0.8rem;
            border-radius: 12px;
            max-height: 95vh; /* Veći procenat visine na mobilnim */
        }
        
        .login-title {
            margin-bottom: 1rem;
        }
        
        .btn-login {
            padding: 11px;
            margin-top: 6px;
        }
        
        .mb-3 {
            margin-bottom: 0.8rem;
        }
    }

    @@media (max-width: 320px) {
        .login-container {
            padding: 0.8rem 0.6rem;
            max-width: 95vw;
        }
        
        .form-control {
            padding: 8px 10px;
        }
        
        .btn-login {
            padding: 10px;
        }
    }

    /* Orijentacija landscape na telefonima */
    @@media (max-height: 600px) and (orientation: landscape) {
        .login-wrapper {
            height: auto;
            min-height: 100vh;
            align-items: flex-start;
            padding-top: 10px;
        }
        
        .login-container {
            max-height: 95vh;
            margin: 10px auto;
        }
    }

    /* Za veoma male visine */
    @@media (max-height: 500px) {
        .login-container {
            padding: 0.8rem;
            max-height: 98vh;
        }
        
        .login-title {
            margin-bottom: 0.8rem;
            font-size: 1.4rem;
        }
        
        .mb-3 {
            margin-bottom: 0.6rem;
        }
        
        .form-control {
            padding: 8px 10px;
        }
        
        .btn-login {
            padding: 10px;
            margin-top: 5px;
        }
    }

    /* Tablet stilovi */
    @@media (min-width: 768px) and (max-width: 1024px) {
        .login-container {
            max-width: 400px;
        }
    }

    /* Desktop stilovi */
    @@media (min-width: 1025px) {
        .login-container {
            max-width: 420px;
        }
    }

    /* Safari specific fix za 100vh */
    @@supports (-webkit-touch-callout: none) {
        .login-wrapper {
            height: -webkit-fill-available;
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <h2 class="login-title">
            Login
        </h2>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Zubac.Models.MakeOrderViewModel

@{
    ViewData["Title"] = "Make Order";

    bool foodEnabled = User.HasClaim("FoodEnabled", "True");
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<div class="container my-4">

    <!-- Home dugme -->
    <div class="mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            🏠 Home
        </a>
    </div>

    <div class="card p-4 shadow-sm">
        <h2 class="mb-4 text-center">📝 Make a New Order</h2>

        <form asp-action="Create" method="post" id="orderForm">


            <!-- Food (if enabled) -->
            @if (foodEnabled)
            {
                <div class="row mb-3">
                    <div class="col-md-8 mb-3">
                        <label>Food</label>
                        <select id="foodSelect" class="form-control w-100">
                            <option value="">Select a food item</option>
                            @foreach (var article in Model.Articles.Where(a => a.IsFood))
                            {
                                <option value="@article.Id" data-name="@article.Name" data-price="@article.Price">
                                    @article.Name (@article.Price.ToString("F2")€)
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Quantity</label>
                        <input type="number" id="foodQuantityInput" class="form-control" placeholder="Enter quantity" min="1" value="1" />
                    </div>
                    <div class="col-12 mb-3">
                        <button type="button" class="btn btn-info w-100" onclick="addFood()">➕ Add Food</button>
                    </div>
                </div>
            }

            <!-- Drinks -->
            <div class="row mb-3">
                <div class="col-md-8 mb-3">
                    <label>Drink</label>
                    <select id="drinkSelect" class="form-control w-100">
                        <option value="">Select a drink</option>
                        @foreach (var article in Model.Articles.Where(a => !a.IsFood))
                        {
                            <option value="@article.Id" data-name="@article.Name" data-price="@article.Price">
                                @article.Name (@article.Price.ToString("F2")€)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label>Quantity</label>
                    <input type="number" id="drinkQuantityInput" class="form-control" placeholder="Enter quantity" min="1" value="1" />
                </div>
                <div class="col-12 mb-3">
                    <button type="button" class="btn btn-info w-100" onclick="addDrink()">➕ Add Drink</button>
                </div>
            </div>

            <!-- Selected Items -->
            <div id="selectedItemsContainer" class="mb-3"></div>

            <!-- Total -->
            <div class="mb-3 text-end fw-bold fs-5">
                Total: <span id="totalAmount">0.00€</span>
            </div>

            <button type="submit" class="btn btn-success w-100">✅ Submit Order</button>
        </form>
    </div>
</div>

<style>
    .item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0.75rem;
        border: 1px solid #dee2e6;
        border-radius: 0.35rem;
        margin-bottom: 0.5rem;
        background-color: #f8f9fa;
    }

        .item span {
            font-weight: 500;
        }

    @@media (max-width: 576px) {
        .item {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<script>
    $(document).ready(function () {
        $('#drinkSelect, #foodSelect').select2({
            placeholder: "Select an item",
            allowClear: true
        });

        $('#tableNumber').select2({
            tags: true,
            placeholder: "Select or type table number"
        });
    });

    let nextIndex = 0;
    let totalAmount = 0;

    function addFood() {
        const selected = $('#foodSelect').find(':selected');
        const id = selected.val();
        const name = selected.data("name");
        const price = parseFloat(selected.data("price"));
        const quantity = parseInt($('#foodQuantityInput').val());

        if (!id || quantity < 1) {
            alert("Please select a food and enter a valid quantity.");
            return;
        }

        const itemTotal = (price * quantity).toFixed(2);
        totalAmount += parseFloat(itemTotal);

        const html = `
                <div class="item" id="item-${nextIndex}">
                    <input type="hidden" name="SelectedArticles[${nextIndex}].ArticleId" value="${id}" />
                    <input type="hidden" name="SelectedArticles[${nextIndex}].IsSelected" value="true" />
                    <input type="hidden" name="SelectedArticles[${nextIndex}].Quantity" value="${quantity}" />
                    <input type="hidden" name="SelectedArticles.index" value="${nextIndex}" />
                    <span>${name} × ${quantity} — ${itemTotal}€</span>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeItem(${nextIndex}, ${itemTotal})">🗑 Remove</button>
                </div>
            `;

        $('#selectedItemsContainer').append(html);
        $('#totalAmount').text(totalAmount.toFixed(2) + '€');
        nextIndex++;
        $('#foodSelect').val(null).trigger('change');
        $('#foodQuantityInput').val('1');
    }

    function addDrink() {
        const selected = $('#drinkSelect').find(':selected');
        const id = selected.val();
        const name = selected.data("name");
        const price = parseFloat(selected.data("price"));
        const quantity = parseInt($('#drinkQuantityInput').val());

        if (!id || quantity < 1) {
            alert("Please select a drink and enter a valid quantity.");
            return;
        }

        const itemTotal = (price * quantity).toFixed(2);
        totalAmount += parseFloat(itemTotal);

        const html = `
                <div class="item" id="item-${nextIndex}">
                    <input type="hidden" name="SelectedArticles[${nextIndex}].ArticleId" value="${id}" />
                    <input type="hidden" name="SelectedArticles[${nextIndex}].IsSelected" value="true" />
                    <input type="hidden" name="SelectedArticles[${nextIndex}].Quantity" value="${quantity}" />
                    <input type="hidden" name="SelectedArticles.index" value="${nextIndex}" />
                    <span>${name} × ${quantity} — ${itemTotal}€</span>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeItem(${nextIndex}, ${itemTotal})">🗑 Remove</button>
                </div>
            `;

        $('#selectedItemsContainer').append(html);
        $('#totalAmount').text(totalAmount.toFixed(2) + '€');
        nextIndex++;
        $('#drinkSelect').val(null).trigger('change');
        $('#drinkQuantityInput').val('1');
    }

    function removeItem(index, itemTotal) {
        $('#item-' + index).remove();
        totalAmount -= parseFloat(itemTotal);
        $('#totalAmount').text(totalAmount.toFixed(2) + '€');
    }
</script>
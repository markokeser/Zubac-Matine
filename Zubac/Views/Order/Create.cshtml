@model Zubac.Models.MakeOrderViewModel

@{
    ViewData["Title"] = "Make Order";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<div class="container my-4">

    <!-- Home dugme levo -->
    <div class="mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            🏠 Home
        </a>
    </div>

    <div class="card p-4 shadow-sm">
        <h2 class="mb-4 text-center">📝 Make a New Order</h2>

        <form asp-action="Create" method="post" id="orderForm">

            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label>Table Number</label>
                    <select id="tableNumber" name="TableNumber" class="form-control w-100">
                        @for (int i = 1; i <= 20; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Drink</label>
                    <select id="drinkSelect" class="form-control w-100">
                        <option value="">Select a drink</option>
                        @foreach (var article in Model.Articles)
                        {
                            <option value="@article.Id" data-name="@article.Name" data-price="@article.Price">
                                @article.Name (@article.Price.ToString("F2")€)
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 mb-3 mb-md-0">
                    <label>Quantity</label>
                    <input type="number" id="quantityInput" class="form-control" placeholder="Enter quantity" min="1" value="1" />
                </div>
                <div class="col-md-8 d-flex align-items-end">
                    <button type="button" class="btn btn-info w-100" onclick="addDrink()">➕ Add to List</button>
                </div>
            </div>

            <div id="selectedDrinksContainer" class="mb-3"></div>

            <!-- VEĆI TOTAL -->
            <div class="mb-3 text-end fw-bold fs-5">
                Total: <span id="totalPrice">0.00</span>€
            </div>

            <button type="submit" class="btn btn-success w-100">✅ Submit Order</button>
        </form>
    </div>
</div>

<style>
    .drink-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0.75rem;
        border: 1px solid #dee2e6;
        border-radius: 0.35rem;
        margin-bottom: 0.5rem;
        background-color: #f8f9fa;
    }

    .drink-item span {
        font-weight: 500;
    }

    .remove-button {
        font-size: 0.8rem;
    }

    @@media (max-width: 576px){
        .drink-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .remove-button {
            margin-top: 0.25rem;
        }
    }
</style>

<script>
    $(document).ready(function () {
        $('#drinkSelect').select2({
            placeholder: "Select a drink",
            allowClear: true
        });

        $('#tableNumber').select2({
            tags: true,
            placeholder: "Select or type table number"
        });
    });

    let nextIndex = 0;
    let total = 0;

    function addDrink() {
        const selected = $('#drinkSelect').find(':selected');
        const id = selected.val();
        const name = selected.data("name");
        const price = parseFloat(selected.data("price"));
        const quantity = parseInt($('#quantityInput').val());

        if (!id || quantity < 1) {
            alert("Please select a drink and enter a valid quantity.");
            return;
        }

        const lineTotal = price * quantity;
        total += lineTotal;

        const drinkHtml = `
            <div class="drink-item" id="drink-${nextIndex}">
                <input type="hidden" name="SelectedArticles[${nextIndex}].ArticleId" value="${id}" />
                <input type="hidden" name="SelectedArticles[${nextIndex}].IsSelected" value="true" />
                <input type="hidden" name="SelectedArticles[${nextIndex}].Quantity" value="${quantity}" />
                <input type="hidden" name="SelectedArticles.index" value="${nextIndex}" />

                <span>${name} × ${quantity} — ${lineTotal.toFixed(2)}€</span>

                <button type="button" class="btn btn-sm btn-danger" onclick="removeDrink(${nextIndex}, ${lineTotal})">
                    🗑 Remove
                </button>
            </div>
        `;

        $('#selectedDrinksContainer').append(drinkHtml);
        nextIndex++;

        $('#drinkSelect').val(null).trigger('change');
        $('#quantityInput').val('1');
        $('#totalPrice').text(total.toFixed(2));
    }

    function removeDrink(index, lineTotal) {
        $('#drink-' + index).remove();
        total -= lineTotal;
        $('#totalPrice').text(total.toFixed(2));
    }
</script>
@model Zubac.Models.RestaurantSettingsViewModel

<div class="container my-4">
    <!-- Home i Back dugmad -->
    <div class="d-flex mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">🏠 Home</a>
        <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary">⬅ Back</a>
    </div>
<div class="container mt-4">
    <h2 class="mb-4">Restaurant Settings</h2>

    <form asp-action="SaveSettings" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AdminId" />

        <div class="card p-4 shadow-sm mb-3">
            <h4>General</h4>
            <div class="form-group mt-3">
                <label asp-for="StartTime">Start of Daily Tracking</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
            </div>
        </div>

        <div class="card p-4 shadow-sm mb-3">
            <h4>Permissions</h4>
            <div class="form-check mt-2">
                <input asp-for="FoodEnabled" class="form-check-input" type="checkbox" />
                <label asp-for="FoodEnabled" class="form-check-label">Enable Food Ordering</label>
            </div>
            <div class="form-check mt-2">
                <input asp-for="FreeDrinksEnabled" class="form-check-input" type="checkbox" />
                <label asp-for="FreeDrinksEnabled" class="form-check-label">Allow Free Drinks</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
@model List<Zubac.Models.ArticleViewModel>

<div class="container my-4">
    <!-- Home i Back dugmad -->
    <div class="d-flex mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">🏠 Home</a>
        <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary">⬅ Back</a>
    </div>
<div class="container my-4">
    <h2 class="mb-4">Food Menu</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <form asp-action="DeleteArticle" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="isFood" value="true" />
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-4">Add New Food</h4>
    <form asp-action="AddArticle" method="post">
        <input type="hidden" name="IsFood" value="true" />
        <input type="hidden" name="AdminId" value="1" /> <!-- TODO: zameni stvarnim AdminId -->
        <div class="mb-3">
            <label>Name</label>
            <input name="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Price</label>
            <input name="Price" type="number" step="0.01" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Add Food</button>
    </form>
</div>
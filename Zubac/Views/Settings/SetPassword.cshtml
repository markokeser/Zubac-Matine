@model Zubac.Models.SetPasswordViewModel

@{
    ViewData["Title"] = "Set New Password";
}

<div class="container my-5">
    <div class="card p-4 shadow-sm mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4">🔑 Set New Password</h2>

        <form asp-action="SetPassword" method="post">
            <input type="hidden" asp-for="StaffId" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label>Username</label>
                <input type="text" class="form-control" asp-for="Username" readonly />
            </div>

            <div class="mb-3">
                <label>New Password</label>
                <input type="password" class="form-control" asp-for="NewPassword" placeholder="Enter new password" required />
            </div>

            <div class="mb-3">
                <label>Confirm Password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Re-enter new password" required />
            </div>

            <button type="submit" class="btn btn-success w-100">✅ Set Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Opcionalno: validacija da lozinke budu iste pre submit
        document.querySelector('form').addEventListener('submit', function (e) {
            const pass = document.querySelector('[asp-for="NewPassword"]').value;
            const confirm = document.querySelector('[asp-for="ConfirmPassword"]').value;
            if (pass !== confirm) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
    </script>
}

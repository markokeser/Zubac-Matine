            </a>

            <!-- Drink Settings -->
            <a asp-controller="Settings" asp-action="DrinksSettings" class="settings-btn gradient-border">
                <div class="btn-content">
                    <span class="btn-icon">🍷</span>
                    <span class="btn-title">
                        Drink Settings
                    </span>
                    <span class="btn-description">
                        Manage drink menu and pricing
                    </span>
                </div>
            </a>

            <!-- Food Settings -->
            <a asp-controller="Settings" asp-action="FoodSettings" class="settings-btn gradient-border">
                <div class="btn-content">
                    <span class="btn-icon">🍽️</span>
                    <span class="btn-title">
                        Food Settings
                    </span>
                    <span class="btn-description">
                        Manage food menu and categories
                    </span>
                </div>
            </a>

            <!-- AI Menu Builder -->
            <a asp-controller="Settings" asp-action="AiMenuBuilder" class="settings-btn gradient-border">
                <div class="btn-content">
                    <span class="btn-icon">🤖</span>
                    <span class="btn-title">
                        AI Menu Builder
                    </span>
                    <span class="btn-description">
                        Generate menu with artificial intelligence
                    </span>
                </div>
            </a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Settings page loaded');

            // Hover efekti za settings dugmiće
            const settingsButtons = document.querySelectorAll('.settings-btn');
            settingsButtons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-4px)';
                    this.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.25)';
                });

                button.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = 'none';
                });
            });

            // Hover efekti za home dugme
            const homeButton = document.querySelector('.home-btn');
            if (homeButton) {
                homeButton.addEventListener('mouseenter', function () {
                    this.style.transform = 'scale(1.05)';
                    this.style.background = 'rgba(212, 175, 55, 0.2)';
                });

                homeButton.addEventListener('mouseleave', function () {
                    this.style.transform = 'scale(1)';
                    this.style.background = 'rgba(212, 175, 55, 0.1)';
                });
            }

            // Sakrij opis na mobile
            const adjustMobileLayout = () => {
                if (window.innerWidth < 640) {
                    const descriptions = document.querySelectorAll('.btn-description');
                    const headerDescription = document.querySelector('.header-description');

                    descriptions.forEach(desc => {
                        desc.style.display = 'none';
                    });

                    if (headerDescription) {
                        headerDescription.style.display = 'none';
                    }
                } else {
                    const descriptions = document.querySelectorAll('.btn-description');
                    const headerDescription = document.querySelector('.header-description');

                    descriptions.forEach(desc => {
                        desc.style.display = 'block';
                    });

                    if (headerDescription) {
                        headerDescription.style.display = 'block';
                    }
                }
            };

            // Proveri da li naslov prelazi preko Home dugmeta
            const checkOverlap = () => {
                const homeBtn = document.querySelector('.home-btn-container');
                const header = document.querySelector('.header-content');

                if (homeBtn && header && window.innerWidth < 640) {
                    const homeRect = homeBtn.getBoundingClientRect();
                    const headerRect = header.getBoundingClientRect();

                    // Ako se preklapaju, dodaj margin
                    if (headerRect.top < homeRect.bottom + 5) {
                        header.style.marginTop = (homeRect.bottom + 10) + 'px';
                    }
                }
            };

            // Run on load and resize
            adjustMobileLayout();
            checkOverlap();
            window.addEventListener('resize', function () {
                adjustMobileLayout();
                checkOverlap();
            });
        });
    </script>
</body>

                <a asp-controller="Settings" asp-action="FoodSettings" class="settings-btn gradient-border rounded-3xl block h-full" style="background: #2d2d44; text-decoration: none;">
                    <div class="btn-content">
                        <span class="btn-icon">🍽️</span>
                        <span class="btn-title" style="color: #ffffff; font-family: 'Playfair Display', serif;">
                            Food Settings
                        </span>
                        <span class="btn-description" style="color: rgba(255,255,255,0.7); font-family: 'Inter', sans-serif;">

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        /* RESET */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
            overflow-x: hidden;
        }

        body {
            color: rgba(255, 255, 255, 0.9);
            font-family: 'Inter', sans-serif;
            position: relative;
        }

        .settings-btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: block;
            text-decoration: none;
            width: 100%;
        }

            .settings-btn:hover {
                transform: translateY(-4px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
            }

            .settings-btn:active {
                transform: translateY(-2px);
            }

        .home-btn {
            transition: all 0.2s ease;
        }

            .home-btn:hover {
                background: rgba(212, 175, 55, 0.2) !important;
                transform: scale(1.05);
            }

        .gradient-border {
            position: relative;
            border-radius: 20px;
        }

            .gradient-border::before {
                content: '';
                position: absolute;
                inset: 0;
                border-radius: inherit;
                padding: 2px;
                background: linear-gradient(135deg, #d4af37, #f4e4ba, #d4af37);
                -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
            }

        /* MOBILNA VERZIJA - Usklađena sa početnom */
        @@media (max-width: 639px) {
            /* Home button pozicija - manje */
            .home-btn-container {
                position: absolute;
                top: 0.75rem;
                left: 0.5rem;
                z-index: 50;
            }

            .home-btn {
                padding: 0.6rem 1rem !important;
                font-size: 0.85rem;
                background: rgba(212, 175, 55, 0.1) !important;
                color: #d4af37 !important;
                border: 1px solid rgba(212, 175, 55, 0.3) !important;
            }
            /* Main container - manje */
            .main-container {
                padding-top: 3.5rem !important;
                padding-left: 0 !important;
                padding-right: 0 !important;
                width: 100% !important;
                display: flex !important;
                flex-direction: column !important;
                align-items: center !important;
                position: relative;
            }
            /* Header content */
            .header-content {
                text-align: center;
                padding: 0 0.75rem;
                width: 100%;
                margin-top: 0 !important;
                margin-bottom: 1.5rem !important;
            }

            .header-title {
                font-size: 1.8rem !important;
                line-height: 1.1;
            }

            .header-icon {
                font-size: 1.8rem !important;
            }

            .header-description {
                font-size: 0.9rem !important;
                margin-top: 0.25rem;
                display: none; /* Sakrij opis na mobile */
            }
            /* Grid */
            #settings-grid {
                display: grid !important;
                grid-template-columns: 1fr !important;
                gap: 1rem !important;
                width: 100% !important;
                max-width: 100% !important;
                padding: 0 0.75rem !important;
                margin: 0.5rem auto 0 auto !important;
            }
            /* Dugmići - iste veličine kao na početnoj */
            .settings-btn {
                width: 100% !important;
                max-width: 100% !important;
                min-height: 130px !important;
                padding: 0 !important;
                margin: 0 !important;
            }
            /* Button content */
            .btn-content {
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                width: 100%;
                padding: 1.25rem 0.75rem;
            }

            .btn-icon {
                font-size: 2.5rem !important;
                margin-bottom: 0.75rem !important;
            }

            .btn-title {
                font-size: 1.2rem !important;
                font-weight: 700 !important;
                margin-bottom: 0.25rem !important;
                line-height: 1.1 !important;
            }

            .btn-description {
                font-size: 0.8rem !important;
                line-height: 1.2 !important;
                display: none; /* Sakrij opis na mobile */
            }
        }

        /* TABLET VERZIJA - Usklađena */
        @@media (min-width: 640px) and (max-width: 1023px) {
            .home-btn-container {
                position: absolute;
                top: 1.25rem;
                left: 1rem;
                z-index: 50;
            }

            .home-btn {
                padding: 0.7rem 1.25rem !important;
                font-size: 0.9rem;
            }

            .main-container {
                padding-top: 4.5rem !important;
            }

            #settings-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 1.5rem !important;
                max-width: 700px !important;
                padding: 0 1.25rem !important;
            }
            /* Ista veličina dugmića kao na početnoj */
            .settings-btn {
                min-height: 170px;
            }

            .header-title {
                font-size: 2.5rem !important;
            }

            .header-icon {
                font-size: 2.5rem !important;
            }

            .header-content {
                margin-bottom: 1.75rem !important;
            }

            .header-description {
                font-size: 1rem !important;
                margin-top: 0.25rem;
            }
        }

        /* DESKTOP VERZIJA - Usklađena sa početnom */
        @@media (min-width: 1024px) {
            .home-btn-container {
                position: absolute;
                top: 1.5rem;
                left: 1.5rem;
                z-index: 50;
            }

            .home-btn {
                padding: 0.8rem 1.5rem !important;
                font-size: 1rem;
            }

            .main-container {
                padding-top: 5.5rem !important;
            }

            #settings-grid {
                grid-template-columns: repeat(3, 1fr) !important;
                gap: 1.75rem !important;
                max-width: 1100px !important;
                padding: 0 1.5rem !important;
            }
            /* ISTA VELIČINA DUGMIĆA KAO NA POČETNOJ - min-height: 200px */
            .settings-btn {
                min-height: 200px;
            }

            .header-title {
                font-size: 3rem !important;
            }

            .header-icon {
                font-size: 3rem !important;
            }

            .header-content {
                margin-bottom: 2rem !important;
            }

            .header-description {
                font-size: 1.1rem !important;
                margin-top: 0.25rem;
            }
        }

        /* Button content styling - zajedničko - Usklađeno */
        .btn-content {
            height: 100%;
            display: flex;
            flex-direction: column;

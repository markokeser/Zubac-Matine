    <style>
        /* AGGRESSIVE RESET - ELIMINATE ALL MARGINS/PADDING */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        html {
            width: 100vw;
            height: 100vh;
            overflow-x: clip;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
        }

        body {
            width: 100vw;
            min-height: 100vh;
            overflow-x: clip;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
            position: relative;
        }

        #app-container {
            width: 100vw;
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
            position: relative;
            overflow-x: clip;
        }

        .settings-btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: block;
            text-decoration: none;
            min-height: 180px;
        }

            .settings-btn:hover {
                transform: translateY(-4px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
            }

            .settings-btn:active {
                transform: translateY(-2px);
            }

        .home-btn {
            transition: all 0.2s ease;
        }

            .home-btn:hover {
                background: rgba(212, 175, 55, 0.2) !important;
                transform: scale(1.05);
            }

        .gradient-border {
            position: relative;
        }

            .gradient-border::before {
                content: '';
                position: absolute;
                inset: 0;
                border-radius: inherit;
                padding: 2px;
                background: linear-gradient(135deg, #d4af37, #f4e4ba, #d4af37);
                -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
            }

        /* Responsive adjustments */
        @@media (max-width: 640px) {
            .settings-grid {
                grid-template-columns: repeat(1, 1fr) !important;
                gap: 1.5rem !important;
                padding: 0 1rem !important;
                width: 100vw !important;
                max-width: 100vw !important;
                margin-top: 2rem !important;
            }

            .settings-btn {
                min-height: 160px;
                padding: 1.5rem !important;
            }

            .settings-grid > a {
                padding: 1.5rem !important;
            }

            .settings-grid span.text-5xl {
                font-size: 3.5rem;
                margin-bottom: 1rem;
            }

            .settings-grid span.text-xl {
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .settings-grid span.text-sm {
                font-size: 1rem;
                line-height: 1.4;
            }

            .header-title {
                font-size: 2.5rem !important;
            }

            .header-icon {
                font-size: 2.5rem !important;
            }

            .home-btn {
                padding: 0.75rem 1.5rem !important;
                font-size: 1rem;
            }

            .header-description {
                font-size: 1rem !important;
                margin-top: 0.5rem;
            }

            .main-container {
                padding-top: 4rem !important;
            }
        }

        @@media (max-width: 480px) {
            .settings-grid {
                grid-template-columns: repeat(1, 1fr) !important;
                max-width: 100vw !important;
                padding: 0 1rem !important;
                gap: 1.25rem !important;
            }

            .settings-btn {
                min-height: 150px;
                padding: 1.25rem !important;
            }

            .header-title {
                font-size: 2.25rem !important;
            }

            .header-icon {
                font-size: 2.25rem !important;
            }

            .home-btn {
                padding: 0.75rem 1.25rem !important;
                font-size: 0.95rem;
            }

            .main-container {
                padding-top: 3.5rem !important;
            }
        }

        /* UTILITY CLASSES FOR FULL WIDTH */
        .full-width {
            width: 100vw !important;
            max-width: 100vw !important;
            margin-left: 0 !important;
            margin-right: 0 !important;
            padding-left: 0 !important;
            padding-right: 0 !important;
        }

        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

            .no-scrollbar::-webkit-scrollbar {
                display: none;
            }

        /* Spacing adjustments */
        .header-spacing {
            margin-bottom: 4rem !important;
        }

        .grid-spacing {
            margin-top: 3rem !important;
        }

        .main-container {
            padding-top: 5rem !important;
        }

        @@media (min-width: 768px) {
            .header-spacing {
                margin-bottom: 5rem !important;
            }

            .grid-spacing {
                margin-top: 4rem !important;
            }

            .settings-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 2rem !important;
            }

            .settings-btn {
                min-height: 220px;
            }

            .main-container {
                padding-top: 6rem !important;
            }
        }

        @@media (min-width: 1024px) {
            .settings-grid {
                grid-template-columns: repeat(3, 1fr) !important;
                gap: 2.5rem !important;
                max-width: 1400px !important;
            }

            .settings-btn {
                min-height: 250px;
            }

            .main-container {
                padding-top: 7rem !important;
            }
        }

        /* Button content styling */
        .btn-content {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .btn-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }

        .btn-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            line-height: 1.2;
            text-align: center;
        }

        .btn-description {
            font-size: 1.1rem;
            line-height: 1.4;
            text-align: center;
            opacity: 0.8;
        }

        @@media (max-width: 640px) {
            .btn-content {
                padding: 1.5rem;
            }

            .btn-icon {
                font-size: 3.5rem;
                margin-bottom: 1.25rem;
            }

            .btn-title {
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .btn-description {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body style="margin: 0; padding: 0; width: 100vw;">

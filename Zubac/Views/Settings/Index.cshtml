<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Settings</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&amp;family=Inter:wght@400;500;600&amp;display=swap" rel="stylesheet">
    <style>
        /* RESET */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f0f23 100%);
            overflow-x: hidden;
        }

        body {
            color: rgba(255, 255, 255, 0.9);
            font-family: 'Inter', sans-serif;
            position: relative;
        }

        .settings-btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: block;
            text-decoration: none;
        }

            .settings-btn:hover {
                transform: translateY(-4px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.25);
            }

            .settings-btn:active {
                transform: translateY(-2px);
            }

        .home-btn {
            transition: all 0.2s ease;
        }

            .home-btn:hover {
                background: rgba(212, 175, 55, 0.2) !important;
                transform: scale(1.05);
            }

        .gradient-border {
            position: relative;
        }

            .gradient-border::before {
                content: '';
                position: absolute;
                inset: 0;
                border-radius: inherit;
                padding: 2px;
                background: linear-gradient(135deg, #d4af37, #f4e4ba, #d4af37);
                -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
            }

        /* MOBILNA VERZIJA - POPRAVLJENA */
        @@media (max-width: 639px) {
            /* Home button pozicija - ISPRAVLJENO */
            .home-btn-container {
                position: absolute;
                top: 1.5rem;
                left: 1rem;
                z-index: 50;
            }

            .home-btn {
                padding: 0.75rem 1.25rem !important;
                font-size: 0.95rem;
                background: rgba(212, 175, 55, 0.1) !important;
                color: #d4af37 !important;
                border: 1px solid rgba(212, 175, 55, 0.3) !important;
            }
            /* Main container - DODAO PADDING GORE ZA HOME DUGME */
            .main-container {
                padding-top: 7rem !important; /* POVEĆANO da stane home dugme */
                padding-left: 0 !important;
                padding-right: 0 !important;
                width: 100% !important;
                display: flex !important;
                flex-direction: column !important;
                align-items: center !important;
                position: relative;
            }
            /* Header content - DODAO MARGIN GORE */
            .header-content {
                text-align: center;
                padding: 0 1rem;
                width: 100%;
                margin-top: 1rem !important; /* Dodat margin da ne bude uz vrh */
            }

            .header-title {
                font-size: 2.25rem !important; /* SMANJENO malo */
                line-height: 1.2;
                margin-top: 0.5rem !important;
            }

            .header-icon {
                font-size: 2.25rem !important;
            }

            .header-description {
                font-size: 1rem !important;
                margin-top: 0.5rem;
            }
            /* Grid */
            #settings-grid {
                display: grid !important;
                grid-template-columns: 1fr !important;
                gap: 1.5rem !important;
                width: 100% !important;
                max-width: 100% !important;
                padding: 0 1rem !important;
                margin: 2rem auto 0 auto !important; /* Dodat margin gore */
            }
            /* Dugmići */
            .settings-btn {
                width: 100% !important;
                max-width: 100% !important;
                min-height: 150px;
                padding: 1.25rem !important;
                margin: 0 !important;
            }
            /* Button content */
            .btn-content {
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                width: 100%;
                padding: 1.25rem;
            }

            .btn-icon {
                font-size: 3rem !important;
                margin-bottom: 1rem !important;
            }

            .btn-title {
                font-size: 1.4rem !important;
                font-weight: 700 !important;
                margin-bottom: 0.4rem !important;
                line-height: 1.2 !important;
            }

            .btn-description {
                font-size: 0.95rem !important;
                line-height: 1.4 !important;
            }
        }

        /* TABLET VERZIJA */
        @@media (min-width: 640px) and (max-width: 1023px) {
            .home-btn-container {
                position: absolute;
                top: 2rem;
                left: 2rem;
                z-index: 50;
            }

            .main-container {
                padding-top: 8rem !important;
            }

            #settings-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 2rem !important;
                max-width: 800px !important;
                padding: 0 2rem !important;
            }

            .settings-btn {
                min-height: 200px;
            }

            .header-title {
                font-size: 3rem !important;
            }
        }

        /* DESKTOP VERZIJA */
        @@media (min-width: 1024px) {
            .home-btn-container {
                position: absolute;
                top: 2.5rem;
                left: 2.5rem;
                z-index: 50;
            }

            .main-container {
                padding-top: 9rem !important;
            }

            #settings-grid {
                grid-template-columns: repeat(3, 1fr) !important;
                gap: 2.5rem !important;
                max-width: 1400px !important;
                padding: 0 3rem !important;
            }

            .settings-btn {
                min-height: 250px;
            }

            .header-title {
                font-size: 3.5rem !important;
            }
        }

        /* Button content styling - zajedničko */
        .btn-content {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem;
        }

        .btn-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }

        .btn-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            line-height: 1.2;
            color: #ffffff;
            font-family: 'Playfair Display', serif;
        }

        .btn-description {
            font-size: 1.1rem;
            line-height: 1.4;
            color: rgba(255, 255, 255, 0.7);
            font-family: 'Inter', sans-serif;
            opacity: 0.8;
        }

        /* Header styling */
        .header-content {
            text-align: center;
            width: 100%;
            margin-bottom: 3rem;
        }

        .header-title {
            font-family: 'Playfair Display', serif;
            color: #d4af37;
        }

        .header-description {
            color: rgba(255,255,255,0.7);
            font-family: 'Inter', sans-serif;
            margin-top: 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Home Button - Top Left - ISPRAVLJENO -->
    <div class="home-btn-container">
        <a asp-controller="Home" asp-action="Index" class="home-btn flex items-center gap-2 px-5 py-4 rounded-xl font-medium" style="text-decoration: none;">
            <span class="text-2xl">🏠</span>
            <span class="text-lg">Home</span>
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-container w-full min-h-screen flex flex-col items-center py-8">
        <!-- Header - ISPRAVLJENO -->
        <div class="header-content">
            <div class="inline-flex items-center gap-3 mb-4 justify-center">
                <span class="text-5xl md:text-6xl header-icon">⚙️</span>
                <h1 class="text-5xl md:text-6xl font-bold header-title">
                    Settings
                </h1>
            </div>
            <p class="text-lg md:text-xl header-description">
                Manage your restaurant configuration
            </p>
        </div>

        <!-- Settings Grid -->
        <div id="settings-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-7xl mx-auto px-4">
            <!-- Staff Settings -->
            <a asp-controller="Settings" asp-action="Staff" class="settings-btn gradient-border rounded-3xl" style="background: #2d2d44;">
                <div class="btn-content">
                    <span class="btn-icon">👥</span>
                    <span class="btn-title">
                        Staff Settings
                    </span>
                    <span class="btn-description">
                        Manage staff members and permissions
                    </span>
                </div>
            </a>

            <!-- Restaurant Settings -->
            <a asp-controller="Settings" asp-action="RestaurantSettings" class="settings-btn gradient-border rounded-3xl" style="background: #2d2d44;">
                <div class="btn-content">
                    <span class="btn-icon">🏪</span>
                    <span class="btn-title">
                        Restaurant Settings
                    </span>
                    <span class="btn-description">
                        Configure restaurant details and preferences
                    </span>
                </div>
            </a>

            <!-- Drink Settings -->
            <a asp-controller="Settings" asp-action="DrinksSettings" class="settings-btn gradient-border rounded-3xl" style="background: #2d2d44;">
                <div class="btn-content">
                    <span class="btn-icon">🍷</span>
                    <span class="btn-title">
                        Drink Settings
                    </span>
                    <span class="btn-description">
                        Manage drink menu and pricing
                    </span>
                </div>
            </a>

            <!-- Food Settings -->
            <a asp-controller="Settings" asp-action="FoodSettings" class="settings-btn gradient-border rounded-3xl" style="background: #2d2d44;">
                <div class="btn-content">
                    <span class="btn-icon">🍽️</span>
                    <span class="btn-title">
                        Food Settings
                    </span>
                    <span class="btn-description">
                        Manage food menu and categories
                    </span>
                </div>
            </a>

            <!-- AI Menu Builder -->
            <a asp-controller="Settings" asp-action="AiMenuBuilder" class="settings-btn gradient-border rounded-3xl" style="background: #2d2d44;">
                <div class="btn-content">
                    <span class="btn-icon">🤖</span>
                    <span class="btn-title">
                        AI Menu Builder
                    </span>
                    <span class="btn-description">
                        Generate menu with artificial intelligence
                    </span>
                </div>
            </a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('DEBUG: Page loaded');

            // Hover efekti
            const settingsButtons = document.querySelectorAll('.settings-btn');
            settingsButtons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-4px)';
                    this.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.25)';
                });

                button.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = 'none';
                });
            });

            const homeButton = document.querySelector('.home-btn');
            if (homeButton) {
                homeButton.addEventListener('mouseenter', function () {
                    this.style.transform = 'scale(1.05)';
                    this.style.background = 'rgba(212, 175, 55, 0.2) !important';
                });

                homeButton.addEventListener('mouseleave', function () {
                    this.style.transform = 'scale(1)';
                    this.style.background = 'rgba(212, 175, 55, 0.1) !important';
                });
            }

            // Proveri da li naslov prelazi preko Home dugmeta
            const checkOverlap = () => {
                const homeBtn = document.querySelector('.home-btn-container');
                const header = document.querySelector('.header-content');

                if (homeBtn && header && window.innerWidth < 640) {
                    const homeRect = homeBtn.getBoundingClientRect();
                    const headerRect = header.getBoundingClientRect();

                    console.log('Home button position:', homeRect.top, homeRect.right);
                    console.log('Header position:', headerRect.top, headerRect.left);

                    // Ako se preklapaju, dodaj više margine
                    if (headerRect.top < homeRect.bottom + 10) {
                        header.style.marginTop = (homeRect.bottom + 20) + 'px';
                    }
                }
            };

            // Proveri odmah i na resize
            checkOverlap();
            window.addEventListener('resize', checkOverlap);
        });
    </script>
</body>
</html>
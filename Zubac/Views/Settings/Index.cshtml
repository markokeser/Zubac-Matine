        </div>
    </div>

    <script>
        // AGGRESSIVE FIX FOR MARGIN/PADDING ISSUES
        document.addEventListener('DOMContentLoaded', function () {
            // Force all elements to have no margin/padding
            const allElements = document.querySelectorAll('*');
            allElements.forEach(el => {
                el.style.margin = '0';
                el.style.padding = '0';
                el.style.boxSizing = 'border-box';
            });

            // Specifically target problematic elements
            const html = document.documentElement;
            const body = document.body;
            const appContainer = document.getElementById('app-container');

            // Apply inline styles to override everything
            html.style.margin = '0';
            html.style.padding = '0';
            html.style.width = '100vw';
            html.style.overflowX = 'clip';
            html.style.backgroundColor = '#1a1a2e';

            body.style.margin = '0';
            body.style.padding = '0';
            body.style.width = '100vw';
            body.style.overflowX = 'clip';
            body.style.backgroundColor = '#1a1a2e';
            body.style.position = 'relative';

            appContainer.style.margin = '0';
            appContainer.style.padding = '0';
            appContainer.style.width = '100vw';
            appContainer.style.maxWidth = '100vw';
            appContainer.style.overflowX = 'clip';
            appContainer.style.position = 'relative';
            appContainer.style.left = '0';
            appContainer.style.right = '0';

            // Add spacing between header and grid
            const header = document.querySelector('.header-spacing');
            const grid = document.getElementById('settings-grid');

            if (header && grid) {
                header.style.marginBottom = window.innerWidth < 640 ? '3rem' : '4rem';
                grid.style.marginTop = window.innerWidth < 640 ? '2rem' : '3rem';
            }

            // Adjust main container padding based on screen size
            const mainContainer = document.querySelector('.main-container');
            if (mainContainer) {
                if (window.innerWidth < 480) {
                    mainContainer.style.paddingTop = '3.5rem';
                } else if (window.innerWidth < 640) {
                    mainContainer.style.paddingTop = '4rem';
                } else if (window.innerWidth < 768) {
                    mainContainer.style.paddingTop = '5rem';
                } else if (window.innerWidth < 1024) {
                    mainContainer.style.paddingTop = '6rem';
                } else {
                    mainContainer.style.paddingTop = '7rem';
                }
            }

            // Fix any remaining containers
            const containers = document.querySelectorAll('.header-spacing, .settings-grid');
            containers.forEach(container => {
                container.style.marginLeft = '0';
                container.style.marginRight = '0';
                container.style.paddingLeft = '0';
                container.style.paddingRight = '0';
                container.style.width = '100vw';
                container.style.maxWidth = '100vw';
                container.style.boxSizing = 'border-box';
            });

            // Add hover effects to settings buttons
            const settingsButtons = document.querySelectorAll('.settings-btn');
            settingsButtons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-4px)';
                    this.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.25)';
                });

                button.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = 'none';
                });
            });

            // Add hover effect to home button
            const homeButton = document.querySelector('.home-btn');
            if (homeButton) {
                homeButton.addEventListener('mouseenter', function () {
                    this.style.transform = 'scale(1.05)';
                    this.style.background = 'rgba(212, 175, 55, 0.2)';
                });

                homeButton.addEventListener('mouseleave', function () {
                    this.style.transform = 'scale(1)';
                    this.style.background = 'rgba(212, 175, 55, 0.1)';
                });
            }

            // Adjust button sizes based on content
            const adjustButtonSizes = () => {
                const buttons = document.querySelectorAll('.settings-btn');
                buttons.forEach(button => {
                    const content = button.querySelector('.btn-content');
                    if (content) {
                        const contentHeight = content.scrollHeight;
                        const minHeight = window.innerWidth < 768 ? 160 : 220;
                        button.style.minHeight = Math.max(minHeight, contentHeight + 40) + 'px';
                    }
                });
            };

            adjustButtonSizes();
            window.addEventListener('resize', adjustButtonSizes);
        });

        // Adjust spacing on resize
        window.addEventListener('resize', function () {
            const header = document.querySelector('.header-spacing');
            const grid = document.getElementById('settings-grid');
            const mainContainer = document.querySelector('.main-container');

            if (header && grid) {
                if (window.innerWidth < 640) {
                    header.style.marginBottom = '3rem';
                    grid.style.marginTop = '2rem';
                } else {
                    header.style.marginBottom = '4rem';
                    grid.style.marginTop = '3rem';
                }
            }

            if (mainContainer) {
                if (window.innerWidth < 480) {
                    mainContainer.style.paddingTop = '3.5rem';
                } else if (window.innerWidth < 640) {
                    mainContainer.style.paddingTop = '4rem';
                } else if (window.innerWidth < 768) {
                    mainContainer.style.paddingTop = '5rem';
                } else if (window.innerWidth < 1024) {
                    mainContainer.style.paddingTop = '6rem';
                } else {
                    mainContainer.style.paddingTop = '7rem';
                }
            }

            document.documentElement.style.margin = '0';
            document.documentElement.style.padding = '0';
            document.body.style.margin = '0';
            document.body.style.padding = '0';
        });
    </script>
</body>
</html>
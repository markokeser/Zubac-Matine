        <div id="settings-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 w-full max-w-7xl mx-auto px-3">
            <!-- Staff Settings -->
            <a asp-controller="Settings" asp-action="Staff" class="settings-btn gradient-border">
                <div class="btn-content">
                    <span class="btn-icon">👥</span>
